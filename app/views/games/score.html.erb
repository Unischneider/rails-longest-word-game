<div class="box">
  <div class="item">
    <h1>Result</h1>
    <h3>
      Your answer for the letters was <br>
      <%= @word %>
    </h3>
  </div>
  <div class="item">
    <h2>
      <%= @bool %>
    </h2>
  </div>
  <div class="item">
    <h3><%= @grid %></h3>
  </div>
  <div class="item">
    <h3>
      It took you
      <%= @time %>
      seconds to answer.
    </h3>
  </div>
  <div class="item">
    <h2>
      Your score is:
      <%= @score %>
    </h2>
  </div>
  <a href="<%= root_path %>" class="form-control btn btn-primary">Play again</a>
</div>
